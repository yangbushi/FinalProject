<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ArticleTextFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/articleTitle"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:padding="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/articleLink"
        android:autoLink="web"
        android:textColorLink="#576586"
        android:textColor="#555555"
        android:padding="10dp"
        android:layout_below="@id/articleTitle"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/articleIcon"
        android:layout_below="@id/articleLink"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/articleText"
        android:layout_below="@id/articleIcon"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:maxLines="50"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/article_save"
        android:id="@+id/articleSaveButton"
        android:visibility="gone"/>
</RelativeLayout>